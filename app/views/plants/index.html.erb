
<div class="container">
  <div class="row">
    <h3><% @species.name %></h3>
    <div class="col-xs-12">
      <% if @plants.empty? %>
      	<%= link_to "Sorry, we couldn't find what you search for, you can try again" , categories_path %>

       <% else  %>
      	<% @plants.each do |plant| %>
      	<div class="card-product">
        <img src="<%= image_path('Herbs.jpg')%>">
        <div class="card-product-infos">
    <h2><%= link_to "#{plant.name}", category_species_plant_path(plant.species.category, plant.species, plant) %></h2>
    <p><%= plant.description %> <strong>relevant info</strong> only.</p>
  </div>
</div>


	<%end %>
 <%end %>


    </div>
  </div>
</div>





