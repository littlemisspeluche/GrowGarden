<h2 class="header-garden">My Garden</h2>
<div class="container">
  <div class="row">

    <% @garden_plants.each do |garden| %>
    <div class="card-space">
      <div class="col-xs-6">
        <div class="centered">
          <div class="full-card">
            <%= cl_image_tag("#{garden.plant.photos}") %>
            <div class="darker"></div>
            <div class="plant-infos">
              <div class="plant-name">
                <p><%= garden.plant.name %></p>
              </div>
              <div class="statuses">
                <div class="watering"><p>Next watering</p>
                  <div class="date">

                  </div>
                </div>
                <div class="status">
                  <p>Planted on</p>
                  <div class="date1"><%= "#{garden.created_at.day}/#{garden.created_at.month}/#{garden.created_at.year}"%>
                  </div>
                </div>
              </div>
            </div>
            <div class="buttons-garden">
              <div class="col-xs-6">
                <%= link_to "Remove ", my_garden_plant_path(garden), method: :delete , class: 'btn-blue-sm'%>
              </div>
              <div class="col-xs-6">
                <%= link_to "Status", my_garden_plant_path(garden), class: 'btn-blue-sm' %>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
   <% end %>
  </div>
</div>
