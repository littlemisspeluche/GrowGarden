
<div class="container center">
  <div class="row">
    <div class="col-xs-12">
    <%= form_tag search_path, method: :get do %>
      <%= text_field_tag :query,
          params[:query],
          class:  "form-inline",
          placeholder: "Find a plant"
      %><button name="button" type="submit">Grow</button>
    <% end %>

    </div>
  </div>
</div>




